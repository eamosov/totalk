<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 seconds">
 	<jmxConfigurator />

	<property name="LOG_PATTERN" value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] - ${PID:-????} %5p [%t] --- %c{1}: %m%n"/>
	<property name="LOG_FILE" value="${LOG_FILE:-${LOG_PATH:-/tmp/}spring.log}"/>
	
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>${LOG_PATTERN}</pattern>
		</encoder>
		
	   <layout class="ch.qos.logback.classic.PatternLayout">
	     <Pattern>
	       %date{HH:mm:ss.SSS} %-5level [%thread] %logger{1} [%file:%line] %coloron%msg%coloroff%n%coloron%throwable%coloroff
	     </Pattern>
	   </layout>
	   		
	</appender>
	
	<root level="${root-level:-INFO}">
		<appender-ref ref="CONSOLE" />
	</root>

	<logger name="org.jgroups" level="INFO" />
	<logger name="com.knockchat.sql" level="INFO"/>
	<logger name="org.apache.thrift.server" level="INFO"/>
	<logger name="com.knockchat.appserver.controller.ThriftProcessor" level="INFO"/>
	<logger name="com.knockchat.appserver.model.LazyLoadManager" level="INFO"/>
	<logger name="com.knockchat.appserver.cluster.JgroupsMessageDispatcher" level="DEBUG"/>
	<logger name="com.knockchat.appserver.transport" level="INFO"/>

	
	<logger name="org.hibernate" level="INFO"/>
	<logger name="org.hibernate.SQL" level="INFO" />
	<logger name="org.hibernate.type" level="INFO"/>

	<logger name="jdbc" level="OFF" />
	<logger name="jdbc.sqltiming" level="OFF" />
	<logger name="jdbc.resultsettable" level="OFF" />


	<logger name="com.knockchat.node.model.es.EsService" level="TRACE" />
	<logger name="com.knockchat.appserver.transport.jgroups" level="INFO" />
	<logger name="com.knockchat.node.controllers" level="INFO" />
	<logger name="com.knockchat.utils.ThriftContext" level="INFO" />
	<logger name="com.knockchat.appserver.transport" level="INFO" />


	<logger name="controller" level="DEBUG" />
	<logger name="com.knockchat.node.controllers.clients.account.OnWebsocketOpen" level="DEBUG" />
	<logger name="com.knockchat.appserver.model.lazy.LazyLoadManager" level="INFO" />
	<logger name="com.knockchat.utils.thrift.ThriftTraversal" level="INFO" />
	<logger name="net.sf.ehcache" level="INFO" />
	<logger name="net.sf.ehcache.pool.sizeof" level="INFO" />
	<logger name="com.knockchat.appserver.transport.jgroups.JGroupsThriftAdapter" level="INFO"/>
	<logger name="com.knockchat.node.model.analytics.AnalyticsService" level="INFO"/>

	<logger name="com.datastax.driver" level="INFO" />
	<logger name="com.datastax.driver.core.QueryLogger.NORMAL" level="TRACE" />
	<logger name="com.datastax.driver.core.QueryLogger.SLOW" level="TRACE" />
	<logger name="com.datastax.driver.core.QueryLogger.ERROR" level="TRACE" />

	<logger name="com.knockchat.node.model.account.VladBot" level="DEBUG" />
	<logger name="com.knockchat.utils.thrift.scanner.TBaseScannerFactory" level="DEBUG" />
	<logger name="cassandra-query-log" level="DEBUG" />
	<logger name="com.knockchat.node.utils.geocode"  level="DEBUG" />
	<logger name="com.knockchat.node.model.account.devices" level="DEBUG" />
	<logger name="com.knockchat.node.model.account.AccountModel" level="DEBUG" />
	<logger name="com.knockchat.appserver.cluster" level="INFO" />

</configuration>
