{
    "comments": {
        "dynamic_templates": [
            {
                "default_not_analyzed": {
                    "match": "*",
                    "match_mapping_type": "string",
                    "mapping": {
                        "type": "string",
                        "index": "not_analyzed"
                    }
                }
            }
        ],
        "_parent": {
            "type": "reviews"
        },
        "_all": {
            "enabled": false
        },
        "properties": {
            "body": {
                "type": "string",
                "index": "no"
            },
            "createdAt": {
                "type":   "long"
            },
            "creatorId": {
                "type": "string",
                "index": "not_analyzed"
            },
            "id": {
                "type": "string",
                "index": "no"
            },
            "reviewId": {
                "type": "string",
                "index": "not_analyzed"
            },
            "updatedAt": {
                "type":   "long"
            }
        }
    }
}
